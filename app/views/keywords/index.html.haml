%article.keywords

  %header.page-header.row
    %h1.pull-left= t('nav.keywords')
    = link_to t('.new'), new_keyword_path, :class => 'btn btn-primary pull-right'

  %section.row
    %table.table.table-bordered.table-striped
      %tr
        %th= t('category')
        %th= t('keyword')
        %th= t('actions')

      - collection.each do |keyword|
        %tr
          %td= link_to keyword.keyword_category.name, keyword_category_path(keyword.keyword_category)
          %td= link_to keyword.name, keyword_path(keyword)
          %td
            = link_to t('edit'), edit_keyword_path(keyword), :class => 'btn btn-small'
            = link_to t('delete'), keyword_path(keyword), method: :delete, confirm: t('.confirm_delete'), :class => 'btn btn-danger btn-small'

    = paginate collection

