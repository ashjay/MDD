%header.navbar-inner
  %p.pull-left
    = link_to search_index_url, :class => 'btn', :title => 'Retour' do
      %i.icon-chevron-left
  %h1.pull-left
    = resource.title
  .pull-right
    - if last_search?
      - if previous_result
        =link_to sheet_path(previous_result), :class => 'btn' do
          %i.icon-arrow-left
          =t('actions.search.prev')
      - if next_result
        =link_to sheet_path(next_result), :class => 'btn' do
          %i.icon-arrow-right
          =t('actions.search.next')

%aside{ :class => "level_#{resource.level}" }
  %p.picture
    =image_tag("defaut.jpeg")
  .actions
    = link_to edit_sheet_path(resource), :class => 'btn btn-primary' do
      %i.icon-pencil.icon-white
      = t('actions.sheets.edit')
    = link_to sheet_path(resource), method: :delete, confirm: t('actions.confirm_delete'), :class => 'btn' do
      %i.icon-trash
      =t('actions.sheets.delete')
  .metadata
    - resource.keywords.each do |keyword|
      %span.badge= keyword.name
  .history
    %ul.unstyled
      - resource.histories.each do |history|
        %li
          = t(".histories.#{history.action}", user: history.user.name, time: l(history.created_at, format: :short))

%article.sheet

  %article
    %section.description
      = raw(resource.description)

