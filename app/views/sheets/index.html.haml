%article.sheets

  %header.page-header.row
    %h1.pull-left= t('.title')
    = link_to t('actions.sheets.new'), new_sheet_path, :class => 'btn btn-primary pull-right'

  %section.row
    %table.table.table-bordered.table-striped
      %tr
        %th= t('.keywords')
        %th= t('.sheet')

      = render partial: "shared/sheets", locals: {sheets: collection}

    = paginate collection


